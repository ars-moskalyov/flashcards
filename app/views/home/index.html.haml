- if current_user
  #card
    - if @card
      %p
        = image_tag @card.image_url if @card.image?
      %h3
        %b
          = @card.translated_text.capitalize
      %br
      = simple_form_for :trainer, url: trainer_review_path do |f|
        = f.input :answer, label: false
        = f.hidden_field :card_id, value: @card.id
        = f.button :submit, t('views.home.answer')
    - else
      %h3
        = t('views.home.no_cards')
- else
  %h3 simple flashcards app
