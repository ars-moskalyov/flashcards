#card
  %p
    = image_tag @result[:card].image_url if @result[:card].image?
  %h3
    %b
      = @result[:card].translated_text.mb_chars.capitalize + ' - ' + @result[:card].original_text.mb_chars.capitalize
  - if @result[:err] == 1
    .alert.alert-warning
      %h3
        %b
          = t('.mistake')
          %br
          = t('.answer', answer: @result[:answer] )
  - elsif @result[:err] > 1
    .alert.alert-danger
      %h3
        %b
          = t('.wrong')
          %br
          = t('.answer', answer: @result[:answer] )
  %br
    = button_to t('.next'), root_path, html_options = { method: 'get', class: "btn btn-default" }